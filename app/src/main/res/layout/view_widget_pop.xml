<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/lLayout_bg"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="296dp"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:background="@drawable/app_edg_dialog"        android:orientation="vertical">        <TextView            android:id="@+id/txt_title"            android:text="是否重置二维码？"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="16dp"            android:layout_marginTop="20dp"            android:layout_marginRight="8dp"            android:gravity="center"            android:textColor="@color/black"            android:textSize="14sp" />        <TextView            android:text="重置后您将会获得新的二维码，此前的二维码均将失效"            android:id="@+id/txt_msg"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="16dp"            android:layout_marginTop="12dp"            android:layout_marginRight="8dp"            android:gravity="center"            android:textColor="#666666"            android:textSize="14sp" />        <ImageView            android:layout_width="match_parent"            android:layout_height="1dp"            android:layout_marginTop="10dp"            android:background="@color/alertdialog_line" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <Button                android:id="@+id/btn_cancel"                android:layout_width="wrap_content"                android:layout_height="43dp"                android:layout_weight="1"                android:background="@null"                android:gravity="center"                android:singleLine="true"                android:text="取消"                android:textColor="#555555"                android:textSize="14sp" />            <ImageView                android:id="@+id/img_line"                android:layout_width="1dp"                android:layout_height="43dp"                android:background="@color/alertdialog_line" />            <Button                android:id="@+id/btn_reset"                android:layout_width="wrap_content"                android:layout_height="43dp"                android:layout_weight="1"                android:background="@null"                android:gravity="center"                android:singleLine="true"                android:text="重置"                android:textColor="@color/actionsheet_blue"                android:textSize="16sp" />        </LinearLayout>    </LinearLayout></RelativeLayout>