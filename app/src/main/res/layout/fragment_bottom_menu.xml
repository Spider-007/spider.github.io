<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_menu_no_radio"
        android:orientation="vertical">

        <TextView
            android:id="@+id/save_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:text="保存图片"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/default_size14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ecedec" />

        <TextView
            android:id="@+id/reset_qrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:text="重置二维码"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/default_size14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ecedec" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ecedec" />

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_menu"
        android:gravity="center"
        android:padding="@dimen/default_padding"
        android:text="取消"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/default_size14" />
</LinearLayout>